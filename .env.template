# .env.template
# Copy this to .env and replace with your actual values
# NEVER commit the .env file to version control

# Required: Your GitHub Personal Access Token
github_token=ghp_your_token_here

# Required: Absolute path to directory where repositories will be stored
local_folder=/absolute/path/to/your/repos

# Optional: Repository visibility (all, public, private)
repo_visibility=all

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
log_level=INFO

# Optional: Maximum number of parallel workers
max_workers=1

# Optional: Use SSH instead of HTTPS by default
use_ssh=false
